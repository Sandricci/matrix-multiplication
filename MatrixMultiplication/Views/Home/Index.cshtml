@model MatrixMultiplication.Models.MatrixModel

<div class="container">
    <h1>Matrix multiplication</h1>
    <p>
        Please use semicolon separated values.
    </p>
    
    @using (Html.BeginForm("Calculate", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.MatrixA)
            @Html.TextAreaFor(m => m.MatrixA, htmlAttributes: new { @class="form-control", rows = 8 })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MatrixB)
            @Html.TextAreaFor(m => m.MatrixB, htmlAttributes: new { @class = "form-control", rows = 8 })
        </div>

        if (Model.Result != null)
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Result)
                <textarea name="Result" rows="8" class="form-control" readonly>@Model.Result</textarea>
            </div>
        }

        if (Model.Duration != null)
        {
            <div class="form-group">
                Calculation took @Model.Duration?.TotalMilliseconds ms
            </div>
        }

            <div class="form-group button-wrapper" role="group">
                <button type="submit" class="form-control btn btn-primary">Calculate in parallel</button>
                @Html.ActionLink("Calculate serially", "IndexSerial", "Home", htmlAttributes: new { @class = "btn btn-default" })
                @Html.ActionLink("Calculate a random matrix", "Random", "Home", htmlAttributes: new { @class = "btn btn-default" })
            </div>
    }
</div>
